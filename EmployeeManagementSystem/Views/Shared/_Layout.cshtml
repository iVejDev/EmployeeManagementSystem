<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeeManagementSystem</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
          onerror="this.onerror=null;this.href='/css/default.css';" />

    <!-- Font Awesome för ikoner -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
          onerror="this.onerror=null;this.href='/css/default.css';" />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Animations CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
          onerror="this.onerror=null;this.href='/css/default.css';" />

    <!-- Tema CSS -->
    <link rel="stylesheet" href="~/css/themes.css" asp-append-version="true" />

    <!-- Theme Initialization Script -->
    <script>
        // Sätt temat direkt när sidan laddas för att undvika flimmer
        (function() {
            var theme = getCookie('preferred_theme') || 'light';
            document.documentElement.setAttribute('data-theme', theme);

            function getCookie(name) {
                var match = document.cookie.match(new RegExp('(^| )' + name + '=([^;]+)'));
                return match ? match[2] : null;
            }
        })();
    </script>

    <!-- Specifika sidostilar som kan infogas från vyer -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top shadow">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <i class="fas fa-users text-success mr-2"></i>
                    <span class="font-weight-bold">EMS</span>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home mr-1"></i> Hem
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employees" asp-action="Index">
                                <i class="fas fa-user-tie mr-1"></i> Anställda
                            </a>
                        </li>
                    </ul>

                    <!-- Tema-växlare -->
                    <div class="navbar-nav ml-2">
                        @await Component.InvokeAsync("ThemeSwitcher")
                    </div>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-white">
        <div class="container">
            &copy; @DateTime.Now.Year - EmployeeManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery och Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Diverse scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Theme Switcher Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var themeToggle = document.getElementById('themeToggle');
            if (themeToggle) {
                themeToggle.addEventListener('click', function() {
                    document.getElementById('themeForm').submit();
                });
            }
        });
    </script>

    <!-- Specifika sidoscripts som kan infogas från vyer -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>