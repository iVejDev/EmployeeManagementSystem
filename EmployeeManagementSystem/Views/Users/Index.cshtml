@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Användare";
}

<div class="container mt-4">
    <h1 class="display-4 mb-4">Användare</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-success">
                <i class="fa fa-plus"></i> Lägg till ny användare
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>E-postadress</th>
                            <th>Användarnamn</th>
                            <th>Roller</th>
                            <th>Åtgärder</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Email</td>
                                <td>@item.UserName</td>
                                <td>
                                    @{
                                        // Rollerna visas inte här, du kan utöka koden för att visa dem
                                        // Det skulle kräva att du injicerar UserManager och RoleManager
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            <i class="fa fa-trash"></i> Ta bort
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table thead th {
            background-color: #212529;
            color: white;
        }

        .btn-group .btn {
            margin-right: 5px;
        }
    </style>
}