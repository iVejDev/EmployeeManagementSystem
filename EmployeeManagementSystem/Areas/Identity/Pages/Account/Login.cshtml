@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="container login-container animate__animated animate__fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card login-card shadow">
                <div class="card-header bg-dark text-white text-center">
                    <h2><i class="fas fa-users text-success mr-2"></i> @ViewData["Title"]</h2>
                    <p class="mb-0">Välkommen till Anställningssystemet</p>
                </div>
                <div class="card-body">
                    <form id="account" method="post" class="login-form">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email" class="control-label">E-postadress</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-dark text-white"><i class="fa fa-envelope"></i></span>
                                </div>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password" class="control-label">Lösenord</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text bg-dark text-white"><i class="fa fa-lock"></i></span>
                                </div>
                                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label asp-for="Input.RememberMe" class="form-check-label">Kom ihåg mig</label>
                        </div>
                        <div class="form-group mb-0">
                            <button id="login-submit" type="submit" class="btn btn-success btn-block pulse-animation">
                                <i class="fas fa-sign-in-alt mr-2"></i> Logga in
                            </button>
                        </div>
                        <div class="mt-3 text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-success hover-effect">Glömt lösenord?</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}